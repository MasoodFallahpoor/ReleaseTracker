<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/librariesFragment">

    <fragment
        android:id="@+id/librariesFragment"
        android:name="ir.fallahpoor.releasetracker.libraries.view.LibrariesFragmentCompose"
        android:label="@string/libraries">
        <action
            android:id="@+id/action_to_addLibraryFragment"
            app:destination="@id/addLibraryFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/addLibraryFragment"
        android:name="ir.fallahpoor.releasetracker.addlibrary.view.AddLibraryFragment"
        android:label="@string/add_library" />
</navigation>